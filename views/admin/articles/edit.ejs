<%- include("../../partials/header.ejs") %>
  <%- include("../../partials/navbar.ejs") %>

    <div class="container">
      <hr>
      <div class="card">
        <div class="card-header">
          <h2>Editar Artigo</h2>
        </div>
        <div class="card-body">
          <form method="POST" action="/articles/update">
            <input type="hidden" name="id" value="<%= article.id %>">
            <div class="form-group">
              <label for="title">Título</label>
              <input class="form-control" type="text" id="title" name="title" placeholder="Defina o título do artigo" value="<%= article.title %>" required>
            </div>
            <br>
            <div class="form-group">
              <label for="article">Conteúdo</label>
              <textarea class="form-control" name="body" id="article" placeholder="Escreva o artigo aqui!" required><%= article.body %></textarea>
            </div>
            <br>
            <div class="form-group">
              <label for="category">Categoria</label>
              <select name="category" id="category" class="form-control" required>
                <% categories.forEach((category)=> { %>
                  <option value="<%= category.id %>" <% if (category.id==article.categoryId) { %> selected <% } %>
                      >
                      <%= category.title %>
                  </option>
                  <% }) %>
              </select>
            </div>
            <br>
            <button class="btn btn-success" type="submit">Atualizar</button>
          </form>
        </div>
      </div>
    </div>

    <%- include("../../partials/footer.ejs") %>

      <script src="/tinymce/tinymce.min.js"></script>
      <script>
        tinymce.init({
          language: 'pt_BR',
          selector: "#article",
          plugins: [
            'advlist autolink link image lists print preview hr searchreplace wordcount fullscreen insertdatetime media save table paste emoticons'
          ],
        });
      </script>