<%- include("../../partials/header.ejs") %>
  <%- include("../../partials/homenavbar.ejs") %>

    <body>
      <div class="container">
        <hr>

        <% if (result.articles.rows.length> 0) { %>
          <% result.articles.rows.forEach((article)=> { %>
            <div class="card">
              <div class="card-header">
                <h2>
                  <%= article.title %>
                </h2>
              </div>
              <div class="card-body">
                <a href="/<%= article.slug %>" class="btn btn-success">Ler artigo</a>
              </div>
            </div>
            <br>
            <% }); %>
              <% } else { %>
                <p>Nenhum artigo encontrado nesta página.</p>
                <% } %>

                  <div class="row">
                    <div class="col col-12">
                      <!-- Paginação -->
                      <% if (result.page> 2) { %>
                        <a style="float:left" href="/articles/page/<%= result.page - 1 %>">
                          <<< Prev</a>
                            <% } else if (result.page==2) { %>
                              <a style="float:left" href="/">
                                <<< Prev</a>
                                  <% } %>

                                    <% if (result.next) { %>
                                      <a style="float:right" href="/articles/page/<%= result.page + 1 %>">Next >>></a>
                                      <% } %>
                    </div>
                  </div>
                  <hr>
      </div>
    </body>
    <%- include("../../partials/footer.ejs") %>